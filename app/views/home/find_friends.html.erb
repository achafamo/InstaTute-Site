<div class="row">
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div class="col-lg-6 well">
    <h3>Courses</h3>
    <hr>
    <div>
			<% if user_signed_in? %>
				<%= form_tag(find_friends_path, :method => "get", id: "search-form") do %>
					<%= text_field_tag :search, params[:search], placeholder: "Search by course name" %>
					<%= submit_tag "Search", :name => nil %>
				<% end %>
			<% end %>
		</div>
		<hr>
    <div id="users">
      <%= render(@users) || render('shared/no_resource', resources: 'Courses') %>
    </div>
    <%= render 'shared/paginate', resources: @users %>
		<hr>
		<h4>If you can't find your course here, You can add it yourself by uploading the course syllabus </h4>
		<br> 
		<h3>
		  <%= fa_icon 'pencil' %>
		  <%= link_to 'Add New Course', new_course_path %>
  	</h3>
  </div>
  <div class="col-lg-3">
    <%= render 'shared/links' %>
  </div>
	

</div>

