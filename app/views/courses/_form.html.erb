<%= form_for(@course) do |f| %>
  <div class="form-group">
    <%= f.label :course_name %>
    <%= f.text_field :name, autofocus: true, placeholder: 'Event Name', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :syllabus %>
    <%= f.file_field :syllabus %>
  </div>
  <div class="actions">
    <%= f.submit (@course.persisted? ? :update : :Create), class: 'btn btn-primary' %>
  </div>
<% end %>
